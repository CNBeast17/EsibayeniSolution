@model IEnumerable<EsibayeniSolution.Models.LivestockImagesVM>

@{
    ViewBag.Title = "Livestock Image";
}

<h2>Livestock Image</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LivestockCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Download","LivestockImages",new { id=item.ImageId})">@Html.DisplayFor(modelItem => item.ImageId)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LivestockCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UploadDate)
        </td>
@if (Request.IsAuthenticated && !User.IsInRole("") && !User.IsInRole("Customer"))
{
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.ImageId })
    </td>
}
    
    </tr>
}

</table>

@model IEnumerable<EsibayeniSolution.Models.Batch>

@{
    ViewBag.Title = "Batches";
}

<h2>Batches</h2>

<p>
    @Html.ActionLink("Add Batch", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BatchCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BatchCost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BatchCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BatchCost)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.BatchID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BatchID })
        </td>
    </tr>
}

</table>

@model IEnumerable<EsibayeniSolution.Models.Category>

@{
    ViewBag.Title = "Livestock Categories";
}

<h2>Livestock Categories</h2>

<p>
    @Html.ActionLink("Add Category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryType)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryId })
        </td>
    </tr>
}

</table>
